package exercicios;

import java.util.Scanner;

public class TESTE {
	
	public static void main(String[] args) {
		
		Scanner leitura = new Scanner(System.in);
		String jogoVelha[][] = new  String[3][3], jogador, vencedor = "S";
		int opcao;
		boolean comecar;
		
		do {
			
			System.out.println("Deseja jogar novamente?\n1) Sim\n2) Não");
			opcao = Integer.parseInt(leitura.next());
			
			switch(opcao) {
				case 1:
					comecar = false;
					break;
				case 2:
					System.exit(0);
					break;
				default:
					System.out.println("A opção informada é inválida!");
					break;
			}
			
		}while(opcao != 1 && opcao != 2);
		
	}
		
}
