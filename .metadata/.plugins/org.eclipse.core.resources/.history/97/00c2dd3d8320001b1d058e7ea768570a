package exercicios;

import java.util.Scanner;

public class Exercicio2 {

	public static void main(String[] args) {
		
		Scanner leitura = new Scanner(System.in);
		int contador = 0;
		String continuar = "";
		int [] v1 = new int[5];
		int [] v2 = new int[5];
		int [] v3 = new int[10];
		
		do {
			
			System.out.print("Informe um numero inteiro para o primeiro vetor: ");
			v1[contador] = leitura.nextInt(); 
			
			if(contador != 5) {
				System.out.println("Deseja informar mais numeros para esse vetor? Sim ou Não: ");
				continuar = leitura.next().toUpperCase();
			}
			
		
		}while(contador < 5 & continuar.equals("SIM"));
		
		do {
			
			System.out.print("Informe um numero inteiro para o segundo vetor: ");
			v1[contador] = leitura.nextInt(); 
			
			if(contador != 5) {
				System.out.println("Deseja informar mais numeros para esse vetor? Sim ou Não: ");
				continuar = leitura.next().toUpperCase();
			}
		
		}while(contador < 5 & continuar.equals("SIM"));
		
	}
}
